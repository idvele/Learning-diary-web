@model IEnumerable<LearningDiary_IK0._1.Models.Topics>

@{
    ViewData["Title"] = "Index";
}

<h1>Learning Diary </h1>

<p id="Create"  >
    <a asp-action="Create" class="helper" id="create" onmouseover=colorOn(create) onmouseout=colorOff(create) > Create New</a> @*Miksi asp-creation ei toimi onmouseoverin ym kanssa*@
</p>
<table class="table">
    <thead .d-flex>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedTimeToMaster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeSpent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartLearningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.inProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletionDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedTimeToMaster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartLearningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionDate)
            </td>
            <td>
                <a class="helper"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>   @*onmouseover=colorOn(@item.Id) onmouseout=colorOff(@item.Id*@
                <a class="helper" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="helper" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
